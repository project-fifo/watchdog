%% -*- erlang -*-
%% @doc Fetcher configurations

%% Port watchdog is listening on
{mapping, "port", "watchdog.port",
 [{default, 4444},
  {datatype, integer}]}.

%% @doc Upstream server
{mapping, "upstream", "watchdog.upstream_server",
 [{commented, {"127.0.0.1", 4445}},
  {datatype, ip}]}.

{mapping, "authtoken", "watchdog.auth_token",
 [{commented, "sometoken"}},
  {datatype, string}]}.
